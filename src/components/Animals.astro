---
import { getAnimals } from '../services/caas-scrapping';
import CardAnimal from './CardAnimal.astro';

const animals = await getAnimals()
---
<h1 class="text-white text-3xl text-center mb-8">{animals.length} animals del Centre d'Acollida d'Animals a la Selva CAAS</h1>

<div class="grid gap-8 sm:grid-cols-2 md:grid-cols-3">
  {animals.map(animal => 
    <CardAnimal animal={animal} />
  )}
</div>